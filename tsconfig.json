{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "packages/**/*",
    "shared",
    "babel.config.js",
    "jest.config.js",
    "test",
    "./typings"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "docs",
    "commitlint.config.js",
    ".eslintrc.js"
  ],
  "paths": {
    "@shared/*": [
      "shared/*"
    ]
  }
}
